{
  "name": "tic-tac-toe",
  "version": "1.0.1",
  "description": "A simple tic-tac-toe game to showcase a full JS stack including web and mobile applications",
  "keywords": [
    "javascript",
    "full",
    "stack",
    "game"
  ],
  "main": "src/firebase/tsc/firebase/functions.js",
  "repository": "git@github.com:yenerunver/tic-tac-toe.git",
  "author": "Yener Unver <yenerunver@hotmail.com>",
  "license": "MIT",
  "homepage": "https://yenerunver.github.io/tic-tac-toe",
  "bugs": "https://github.com/yenerunver/tic-tac-toe/issues",
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "@capacitor/android": "^5.6.0",
    "@capacitor/cli": "^5.6.0",
    "@capacitor/core": "^5.6.0",
    "@firebase/app": "^0.9.25",
    "@firebase/auth": "^1.5.1",
    "@firebase/firestore": "^4.4.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.6.0",
    "next": "13.5.4",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10",
    "commitlint": "^17.7.2",
    "eslint": "^8.51.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "13.5.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.1",
    "next-client-cookies": "^1.1.0",
    "postcss": "^8",
    "prettier": "^3.1.1",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3",
    "ts-import": "^5.0.0-beta.0",
    "typescript": "^5"
  },
  "scripts": {
    "dev": "next dev",
    "export": "next build",
    "deploy:android": "rimraf -rf src/firebase/tsc && next build && npx cap sync && npx cap open android",
    "deploy:api": "tsc -p src/firebase/tsconfig-firebase.json && firebase deploy --only functions",
    "deploy:db": "firebase deploy --only firestore",
    "format": "yarn run format:eslint && yarn run format:prettier",
    "format:eslint": "eslint --fix .",
    "format:prettier": "prettier --write .",
    "lint": "yarn run lint:eslint && yarn run lint:prettier",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "release-patch": "standard-version --release-as patch -t \"\"",
    "release-minor": "standard-version --release-as minor -t \"\"",
    "release-major": "standard-version --release-as major -t \"\"",
    "prepare": "husky install"
  }
}
